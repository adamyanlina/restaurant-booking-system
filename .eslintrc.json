{
    "env": {
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "extends":  ["airbnb-base"],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "semi": ["error", "always"],
      "indent": ["error", 4],
      "linebreak-style": 0,
      "object-curly-spacing": "off",
      "import/no-dynamic-require": 0,
      "no-restricted-syntax":"off",
      "no-await-in-loop":"off",
      "object-curly-newline": "off",
      "consistent-return": "off",
      "camelcase": "off",
      "no-underscore-dangle": "off",
      "comma-dangle": "off",
      "no-param-reassign": "off",
      "no-bitwise": "off",
      "no-plusplus": "off",
      "max-classes-per-file": "off",
      "default-case": "off",
      "prefer-destructuring": ["error", {
        "object": true,
        "array": false
      }],
      "eol-last": 0,
      "no-multiple-empty-lines": ["error", { 
        "max": 1, "maxEOF": 0 
      }],
      "no-unused-vars": "off",
      "no-mixed-operators": "off",
      "global-require": "off"
    }
  }